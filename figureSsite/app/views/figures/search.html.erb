


<%= form_with url: search_figures_path, method: :get, local: true do |f| %>
<%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"画像を探してみる" %>
  <%= f.submit :search %>
<% end %>

<div class="list-wrap">
    <% @figures.each do |figure| %>
  <div class="list-box">
  <%= link_to figure_path(figure.id) do %>
  <%= attachment_image_tag figure, :figure_image, :fill, 300, 300, format: 'jpeg' %>
  <%#= attachment_image_tag figure, :figure_image %>
  <% end %>
  <div class="list-body">
    <div class="row">
      <div class="col-2">
        <%= link_to user_path(figure.user) do %>
        <%= attachment_image_tag figure.user, :profile_image, :fill, 30,30, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        <% end %>
      </div>
      <div class="col-10">
        <p class="list-title">
          <%= link_to(figure_path(figure.id), class:"text-dark") do %>
          <strong><span> <%= figure.title %></span></strong>
          <% end %>
        </p>
        <span>♥<%= figure.favorites.count %></szpan>
        <strong><i class="far fa-comment"></i><span> <%= figure.figure_comments.count %></span></strong>

      </div>
    </div>
  </div>
  </div>
<% end %>
</div>