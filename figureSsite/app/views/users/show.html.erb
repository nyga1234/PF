<%#= render 'users/info', user: @user %>

<div class="container">
  <div class="row">
    <!--<div class="col-lg-4" style="background-color: orange;">-->
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
      <h3 class="name"><%= @user.name%></h3>


      <tr>
         <th>フォロー中</th>
         <th><%= link_to "#{@user.follower.count}", user_follower_path(@user.id) %></th>
       </tr>
       <tr>
         <th>フォロワー</th>
         <th><%= link_to "#{@user.followed.count}", user_followed_path(@user.id) %></th>
       </tr>

      <%= render 'relationships/follow_button', user: @user %>

      <h3 class="introduction"><%= @user.introduction %></h3>

      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>

      <%= render 'figures/list', figures: @figures %>

    </div>


   <!--<div class="col-lg-8" style="background-color: red;">-->



    </div>


  </div>
</div>